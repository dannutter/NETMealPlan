<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MealPlan.View.MealPlanListPage"
             Title="MealPlanListPage"
             xmlns:models="clr-namespace:MealPlan.Model"
             xmlns:viewmodel="clr-namespace:MealPlan.ViewModel"
             x:DataType="viewmodel:MealPlanListViewModel">
    <Grid RowDefinitions="Auto,Auto">
        <CollectionView Grid.Row="1" x:Name="MealPlanColl" SelectedItem="{Binding SelectPlan}" SelectionMode="Single" ItemsSource="{Binding Plans}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout  Orientation="Vertical" Span="1" VerticalItemSpacing="15"></GridItemsLayout>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Meal_Plan">
                    <VerticalStackLayout VerticalOptions="CenterAndExpand" BackgroundColor="DarkBlue" HeightRequest="60">
                        <Label FontSize="32" HorizontalOptions="Center" Text="{Binding StartDate}" TextColor="AntiqueWhite"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
